<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Gunner_OrderList"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity" xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    x:Class="Gunner_OrderList.OrderPage"
    mc:Ignorable="d" Height="720" Width="1280">

    <Page.DataContext>
        <local:OrderVM/>
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="9*"/>
                </Grid.RowDefinitions>

                <Grid ColumnSpan="3">
                    <Button Content="Opret ordre" Margin="10,50,0,0" VerticalAlignment="Top" Width="125">
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Click">
                                <Core:NavigateToPageAction TargetPage="Gunner_OrderList.OrderPage"/>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                    </Button>

                    <Button Content="Kunde liste" Margin="160,50,0,0" VerticalAlignment="Top" Width="125">
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Click">
                                <Core:NavigateToPageAction TargetPage="Gunner_OrderList.CustomerPage"/>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                    </Button>
                    <Button Content="Ikke godkendte" Margin="313,50,0,0" VerticalAlignment="Top" Width="125"/>
                    <Button Content="Færdige ordrer" Margin="479,50,0,0" VerticalAlignment="Top" Width="125"/>
                    <Button Content="Til forside" Margin="640,50,0,0" VerticalAlignment="Top" Width="125">
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Click">
                                <Core:NavigateToPageAction TargetPage="Gunner_OrderList.MainPage"/>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                    </Button>
                </Grid>



                <StackPanel Grid.Column="0" Grid.Row="1" Margin="10, 0, 0, 0">
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Center" Height="30" Text="Materialer:" FontWeight="Bold" FontSize="20"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox x:Name="checkBox1" Content="Mål" IsChecked="{Binding NewOrder.MalBool}" />
                        <TextBox  Text="{Binding NewOrder.MalString}"  Height="10" Width="125" IsEnabled="{Binding ElementName=checkBox1, Path=IsChecked}"/>
                    </StackPanel>



                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox Content="SUV"  Width="29" IsChecked="{Binding NewOrder.Suv1}" />
                        <CheckBox Content="Medie"  Width="29" IsChecked="{Binding NewOrder.Medie1}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox x:Name="checkBox2" Content="Sol." Width="71" IsChecked="{Binding NewOrder.SolBool1}"/>
                        <TextBox Text="{Binding NewOrder.SolString1}" Height="10" Width="120" IsEnabled="{Binding ElementName=checkBox2, Path=IsChecked}"/>
                    </StackPanel>



                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox IsChecked="{Binding NewOrder.Suv2}" Content="SUV"  Width="29" />
                        <CheckBox IsChecked="{Binding NewOrder.Medie2}" Content="Medie"  Width="29" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox IsChecked="{Binding NewOrder.SolBool2}" x:Name="checkBox3" Content="Sol." Width="71" />
                        <TextBox  Text="{Binding NewOrder.SolString2}" IsEnabled="{Binding ElementName=checkBox3, Path=IsChecked}" Height="10" Width="120"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox IsChecked="{Binding NewOrder.C751Bool1}" x:Name="checkBox4" Content="751C"  Width="71" />
                        <TextBox Text="{Binding NewOrder.C751String1}" IsEnabled="{Binding ElementName=checkBox4, Path=IsChecked}" Height="10" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox IsChecked="{Binding NewOrder.C751Bool2}" x:Name="checkBox5"  Content="751C"  Width="71" />
                        <TextBox Text="{Binding NewOrder.C751String2}"  IsEnabled="{Binding ElementName=checkBox5, Path=IsChecked}"  Height="10" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox IsChecked="{Binding NewOrder.C751Bool3}" x:Name="checkBox6"  Content="751C"  Width="71" />
                        <TextBox  Text="{Binding NewOrder.C751String3}" IsEnabled="{Binding ElementName=checkBox6, Path=IsChecked}" Height="10" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox x:Name="checkBox7" Visibility="{Binding ElementName=checkBox6, Path=IsChecked}" IsChecked="{Binding NewOrder.C751Bool4}" Content="751C"  Width="71" />
                        <TextBox Visibility="{Binding ElementName=checkBox6, Path=IsChecked}" Text="{Binding NewOrder.C751String4}" IsEnabled="{Binding ElementName=checkBox7, Path=IsChecked}"  Height="10" Width="120"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="1" Margin="10, 0, 0, 0">
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Center" Height="30" Text="Produkt :" FontWeight="Bold" FontSize="20"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox Content="Antal" Width="70"  />
                        <TextBox  Height="10" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox Content="lam" Width="70"  />
                        <TextBox  Height="10" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox Content="lam" Width="70"  />
                        <TextBox  Height="10" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox Content="lam" Width="70"  />
                        <TextBox  Height="10" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox Content="3 mm alu"  Width="29" />
                        <CheckBox Content="Vi monterer"  Width="29" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox Content="10 mm PVC"  Width="29" />
                        <CheckBox Content="Afhentes"  Width="29" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox Content="" Width="70"  />
                        <TextBox  Height="10" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox Content="" Width="70"  />
                        <TextBox  Height="10" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox Content="" Width="70"  />
                        <TextBox  Height="10" Width="120"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Grid.Row="1" Margin="10, 0, 0, 0">
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Center" Height="30" Text="Pris:" FontWeight="Bold" FontSize="20"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox Content="Pris kr." Width="70"  />
                        <TextBox  Height="10" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox Content="DTP kr." Width="70"  />
                        <TextBox  Height="10" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox Content="Fragt." Width="70"  />
                        <TextBox  Height="10" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox Content="Op til 10%" Width="70"  />
                        <TextBox  Height="10" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox Content="Lev. antal" Width="70"  />
                        <TextBox  Height="10" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox Content="Se vedlagte" Width="70"  />
                        <TextBox  Height="10" Width="120"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Button Content="Rediger ordre" Grid.Column="1" HorizontalAlignment="Left" Margin="83,48,0,0" VerticalAlignment="Top" Width="125"/>
            <Button Command="{Binding AddCommand}" Content="Gem ordre" Grid.Column="1" HorizontalAlignment="Left" Margin="310,50,0,0" VerticalAlignment="Top" Width="150">
                <Interactivity:Interaction.Behaviors>
                    <Core:EventTriggerBehavior EventName="Click">
                        <Core:NavigateToPageAction TargetPage="Gunner_OrderList.MainPage"/>
                    </Core:EventTriggerBehavior>
                </Interactivity:Interaction.Behaviors>
            </Button>
        </Grid>


        <Grid Margin="850,150,50,40" BorderBrush="Black" BorderThickness="2">
            <TextBox HorizontalAlignment="Left" Margin="130,20,0,0" TextWrapping="Wrap" Text="{Binding NewOrder.Customer.Company}" VerticalAlignment="Top" Width="225"/>
            <TextBlock HorizontalAlignment="Left" Margin="20,25,0,0" TextWrapping="Wrap" Text="Firma:" VerticalAlignment="Top" FontWeight="Bold"/>
            <TextBox HorizontalAlignment="Left" Margin="130,60,0,0" TextWrapping="Wrap" Text="{Binding NewOrder.Customer.Name}" VerticalAlignment="Top" Width="225"/>
            <TextBlock HorizontalAlignment="Left" Margin="20,65,0,0" TextWrapping="Wrap" Text="Att:" VerticalAlignment="Top" FontWeight="Bold"/>
            <TextBox HorizontalAlignment="Left" Margin="130,100,0,0" TextWrapping="Wrap" Text="{Binding NewOrder.Customer.Address}" VerticalAlignment="Top" Width="225" MaxHeight="25"/>
            <TextBlock HorizontalAlignment="Left" Margin="20,105,0,0" TextWrapping="Wrap" Text="Adresse:" VerticalAlignment="Top" FontWeight="Bold"/>
            <TextBox HorizontalAlignment="Left" Margin="130,140,0,0" TextWrapping="Wrap" Text="{Binding NewOrder.Customer.PhoneNumber}" VerticalAlignment="Top" Width="225"/>
            <TextBlock HorizontalAlignment="Left" Margin="20,145,0,0" TextWrapping="Wrap" Text="Telefon:" VerticalAlignment="Top" FontWeight="Bold"/>
            <TextBox HorizontalAlignment="Left" Margin="130,180,0,0" TextWrapping="Wrap" Text="{Binding NewOrder.Customer.Email}" VerticalAlignment="Top" Width="225"/>
            <TextBlock HorizontalAlignment="Left" Margin="20,185,0,0" TextWrapping="Wrap" Text="E-mail:" VerticalAlignment="Top" FontWeight="Bold"/>
            <TextBox HorizontalAlignment="Left" Margin="130,220,0,0" TextWrapping="Wrap" Text="{Binding NewOrder.Customer.CompanyNumber}" VerticalAlignment="Top" Width="225"/>
            <TextBlock HorizontalAlignment="Left" Margin="20,225,0,0" TextWrapping="Wrap" Text="CVR:" VerticalAlignment="Top" FontWeight="Bold"/>
            <TextBox HorizontalAlignment="Left" Margin="130,260,0,0" TextWrapping="Wrap" Text="{Binding NewOrder.Product}" VerticalAlignment="Top" Width="225"/>
            <TextBlock HorizontalAlignment="Left" Margin="20,265,0,0" TextWrapping="Wrap" Text="Produkt:" VerticalAlignment="Top" FontWeight="Bold"/>
            <CalendarDatePicker x:Name="arrivalCalendarDatePicker" Header="Start dato" Margin="130,300,0,159" Width="105"/>
            <CalendarDatePicker x:Name="arrivalCalendarDatePicker1" Header="Slut dato" Margin="250,300,0,142" Width="105" Height="55"/>
            <!--<TextBox HorizontalAlignment="Left" Margin="130,300,0,0" TextWrapping="Wrap" Text="Start" VerticalAlignment="Top" Width="50"/>
            <TextBlock HorizontalAlignment="Left" Margin="20,305,0,0" TextWrapping="Wrap" Text="Startdato:" VerticalAlignment="Top" FontWeight="Bold"/>-->
            <!--<TextBox HorizontalAlignment="Left" Margin="290,300,0,0" TextWrapping="Wrap" Text="Slut" VerticalAlignment="Top" Width="50"/>
            <TextBlock HorizontalAlignment="Left" Margin="210,305,0,0" TextWrapping="Wrap" Text="Slutdato:" VerticalAlignment="Top" FontWeight="Bold"/>-->
            <TextBox HorizontalAlignment="Left" Margin="130,370,0,0" TextWrapping="Wrap" Text="{Binding NewOrder.Description}" VerticalAlignment="Top" Width="225" MinHeight="120" Height="Auto"/>
            <TextBlock HorizontalAlignment="Left" Margin="20,360,0,0" TextWrapping="Wrap" Text="Beskrivelse:" VerticalAlignment="Top" FontWeight="Bold"/>
        </Grid>


    </Grid>



</Page>
