                        <CheckBox Content="Medie"  Width="29" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox Content="Sol." Width="71" />
                        <TextBox  Height="10" Width="120"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
