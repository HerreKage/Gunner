                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Grid.Row="1" Margin="10, 0, 0, 0">
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Center" Height="30" Text="Pris:" FontWeight="Bold" FontSize="20"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox Content="Pris kr." Width="70"  />
                        <TextBox  Height="10" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox Content="DTP kr." Width="70"  />
                        <TextBox  Height="10" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                        <CheckBox Content="Fragt." Width="70"  />
                        <TextBox  Height="10" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
